@using Football.Application.Features.Stats.Models

<div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4-desktop"></div>
<div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4-desktop">
    <div class="mdc-layout-grid__inner">
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-12">
            <div class="mdc-data-table">
                <div class="mdc-data-table__table-container">
                    <table class="mdc-data-table__table" aria-label="Game statistics">
                        <thead>
                            <tr class="mdc-data-table__header-row">
                                <th class="mdc-data-table__header-cell" role="columnheader" scope="col" colspan="2">
                                    @Team
                                </th>
                            </tr>
                        </thead>
                        <tbody class="mdc-data-table__content">
                            <tr class="mdc-data-table__row">
                                <td class="mdc-data-table__cell" colspan="2">Offense</td>
                            </tr>
                            <tr class="mdc-data-table__row">
                                <td class="mdc-data-table__cell stat-title">Passing Yards</td>
                                <td class="mdc-data-table__cell mdc-data-table__cell--numeric">@(TeamStats?.PassingYards ?? 0)</td>
                            </tr>
                            <tr class="mdc-data-table__row">
                                <td class="mdc-data-table__cell" colspan="2">Defense</td>
                            </tr>
                            <tr class="mdc-data-table__row">
                                <td class="mdc-data-table__cell stat-title">Sacks</td>
                                <td class="mdc-data-table__cell mdc-data-table__cell--numeric">@(TeamStats?.Sacks ?? 0)</td>
                            </tr>
                            <tr class="mdc-data-table__row">
                                <td class="mdc-data-table__cell" colspan="2">Special Teams</td>
                            </tr>
                            <tr class="mdc-data-table__row">
                                <td class="mdc-data-table__cell stat-title">Punts</td>
                                <td class="mdc-data-table__cell mdc-data-table__cell--numeric">@(TeamStats?.Punts ?? 0)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4-desktop"></div>

@code {
    [Parameter] public string Team { get; set; } = string.Empty;

    [Parameter] public StatDto TeamStats { get; set; } = new StatDto();
}
