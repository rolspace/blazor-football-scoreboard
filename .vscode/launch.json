{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "GameService: .NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-gameservice",
            "program": "${workspaceFolder}/src/Services/GameService/bin/Debug/net6.0/Football.Services.GameService.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Services/GameService",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": false
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "GameService: Docker .NET Core Launch (web)",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run-gameservice: debug",
            "launchBrowser": {
                "enabled": false
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Services/GameService/Football.Services.GameService.csproj"
            }
        },
        {
            "name": "GameWorker: .NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-gameworker",
            "program": "${workspaceFolder}/src/Workers/GameWorker/bin/Debug/net5.0/Football.Workers.GameWorker.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Workers/GameWorker",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "GameWorker: Docker .NET Core Launch (console)",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run-gameworker: debug",
            "netCore": {
                "appProject": "${workspaceFolder}/src/Workers/GameWorker/Football.Workers.GameWorker.csproj"
            }
        },
        {
            // Use IntelliSense to find out which attributes exist for C# debugging
            // Use hover for the description of the existing attributes
            // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
            "name": "Scoreboard: .NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-scoreboard",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/src/Scoreboard/Scoreboard.Server/bin/Debug/netcoreapp3.1/Scoreboard.Server.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Scoreboard/Scoreboard.Server",
            "stopAtEntry": false,
            // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}
