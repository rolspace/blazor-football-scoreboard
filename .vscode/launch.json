{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "GameService: .NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-gameservice",
            "program": "${workspaceFolder}/src/Services/GameService/bin/Debug/net6.0/Football.Services.GameService.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Services/GameService",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": false
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "GameService: Docker .NET Core Launch (web)",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run-gameservice: debug",
            "launchBrowser": {
                "enabled": false
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Services/GameService/Football.Services.GameService.csproj"
            }
        },
        {
            "name": "GameWorker: .NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-gameworker",
            "program": "${workspaceFolder}/src/Workers/GameWorker/bin/Debug/net6.0/Football.Workers.GameWorker.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Workers/GameWorker",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "GameWorker: Docker .NET Core Launch (console)",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run-gameworker: debug",
            "netCore": {
                "appProject": "${workspaceFolder}/src/Workers/GameWorker/Football.Workers.GameWorker.csproj"
            }
        },
        {
            "name": "Scoreboard: Hosted .NET Blazor Launch (web)",
            "type": "blazorwasm",
            "request": "launch",
            "preLaunchTask": "build-scoreboard-client",
            "cwd": "${workspaceFolder}/src/Scoreboard/Scoreboard.Client",
            "url": "https://localhost:7187",
            "hosted": true,
            "program": "${workspaceFolder}/src/Scoreboard/Scoreboard.Server/bin/Debug/net6.0/Scoreboard.Server.dll"
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}
