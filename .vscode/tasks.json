{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-gameservice",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Services/GameService/Football.Services.GameService.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish-gameservice",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/Services/GameService/Football.Services.GameService.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch-gameservice",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/Services/GameService/Football.Services.GameService.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "type": "docker-build",
            "label": "docker-build-gameservice: debug",
            "dependsOn": [
                "build-gameservice"
            ],
            "dockerBuild": {
                "tag": "blazornflscoreboard-gameservice:dev",
                "target": "base",
                "dockerfile": "${workspaceFolder}/src/Services/GameService/Dockerfile",
                "context": "${workspaceFolder}",
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Services/GameService/Football.Services.GameService.csproj"
            }
        },
        {
            "type": "docker-build",
            "label": "docker-build-gameservice: release",
            "dependsOn": [
                "build-gameservice"
            ],
            "dockerBuild": {
                "tag": "blazornflscoreboard-gameservice:latest",
                "dockerfile": "${workspaceFolder}/src/Services/GameService/Dockerfile",
                "context": "${workspaceFolder}",
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Services/GameService/Football.Services.GameService.csproj"
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run-gameservice: debug",
            "dependsOn": [
                "docker-build-gameservice: debug"
            ],
            "dockerRun": {
                "env": {
                    "ASPNETCORE_Kestrel__Certificates__Default__Password": "password",
                    "ASPNETCORE_Kestrel__Certificates__Default__Path": "/https/aspnetapp.pfx",
                    "ASPNETCORE_ENVIRONMENT": "Development",
                    "ConnectionStrings__FootballDbContext": "Server=host.docker.internal;Database=footballdb;Uid=root;Pwd=password;"
                },
                "volumes": [
                    {
                        "localPath": "/path/to/.aspnet/https",
                        "containerPath": "/https/"
                    }
                ],
                "ports": [
                    {
                        "hostPort": 11517,
                        "containerPort": 11517
                    },
                    {
                        "hostPort": 2500,
                        "containerPort": 2500
                    }
                ]
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Services/GameService/Football.Services.GameService.csproj",
                "enableDebugging": true
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run-gameservice: release",
            "dockerRun": {},
            "dependsOn": [
                "docker-build-gameservice: release"
            ],
            "netCore": {
                "appProject": "${workspaceFolder}/src/Services/GameService/Football.Services.GameService.csproj"
            }
        },
        {
            "label": "build-gameworker",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Workers/GameWorker/Football.Workers.GameWorker.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish-gameworker",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/Workers/GameWorker/Football.Workers.GameWorker.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch-gameworker",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/Workers/GameWorker/Football.Workers.GameWorker.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "type": "docker-build",
            "label": "docker-build-gamework: debug",
            "dependsOn": [
                "build-gameworker"
            ],
            "dockerBuild": {
                "tag": "blazornflscoreboard-gameworker:dev",
                "target": "base",
                "dockerfile": "${workspaceFolder}/src/Workers/GameWorker/Dockerfile",
                "context": "${workspaceFolder}",
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Workers/GameWorker/Football.Workers.GameWorker.csproj"
            }
        },
        {
            "type": "docker-build",
            "label": "docker-build-gameworker: release",
            "dependsOn": [
                "build-gameworker"
            ],
            "dockerBuild": {
                "tag": "blazornflscoreboard-gameworker:latest",
                "dockerfile": "${workspaceFolder}/src/Workers/GameWorker/Dockerfile",
                "context": "${workspaceFolder}",
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Workers/GameWorker/Football.Workers.GameWorker.csproj"
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run-gameworker: debug",
            "dependsOn": [
                "docker-build: debug"
            ],
            "dockerRun": {
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development",
                    "ConnectionStrings__FootballDbContext": "Server=host.docker.internal;Database=footballdb;Uid=root;Pwd=password;",
                    "HubEndpoint": "https://localhost:11517/hub/football/game"
                },
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Workers/GameWorker/Football.Workers.GameWorker.csproj",
                "enableDebugging": true
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run-gameworker: release",
            "dependsOn": [
                "docker-build: release"
            ],
            "dockerRun": {},
            "netCore": {
                "appProject": "${workspaceFolder}/src/Workers/GameWorker/Football.Workers.GameWorker.csproj"
            }
        },
        {
            "label": "build-scoreboard",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Scoreboard/Scoreboard.Server/Scoreboard.Server.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish-scoreboard",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/Scoreboard/Scoreboard.Server/Scoreboard.Server.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch-scoreboard",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/Scoreboard/Scoreboard.Server/Scoreboard.Server.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}
