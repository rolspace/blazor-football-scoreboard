{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-api",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Hosts/Api/Football.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish-api",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/Hosts/Api/Football.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch-api",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/Hosts/Api/Football.Api.csproj",
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "type": "docker-build",
            "label": "docker-build-api: debug",
            "dependsOn": [
                "build-api"
            ],
            "dockerBuild": {
                "tag": "rolspace/footballscoreboard_api:dev",
                "target": "base",
                "dockerfile": "${workspaceFolder}/src/Hosts/Api/Dockerfile",
                "context": "${workspaceFolder}",
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Hosts/Api/Football.Api.csproj"
            }
        },
        {
            "type": "docker-build",
            "label": "docker-build-api: release",
            "dependsOn": [
                "build-api"
            ],
            "dockerBuild": {
                "tag": "rolspace/footballscoreboard_api:latest",
                "dockerfile": "${workspaceFolder}/src/Hosts/Api/Dockerfile",
                "context": "${workspaceFolder}",
                "platform": {
                    "os": "linux",
                    "architecture": "amd64"
                },
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Hosts/Api/Football.Api.csproj"
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run-api: debug",
            "dependsOn": [
                "docker-build-api: debug"
            ],
            "dockerRun": {},
            "netCore": {
                "appProject": "${workspaceFolder}/src/Hosts/Api/Football.Api.csproj",
                "enableDebugging": true
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run-api: release",
            "dependsOn": [
                "docker-build-api: release"
            ],
            "dockerRun": {},
            "netCore": {
                "appProject": "${workspaceFolder}/src/Hosts/Api/Football.Api.csproj"
            }
        }
    ]
}
