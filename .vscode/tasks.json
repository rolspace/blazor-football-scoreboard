{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-api",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Hosts/Api/Football.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish-api",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/Hosts/Api/Football.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch-api",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/Hosts/Api/Football.Api.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "type": "docker-build",
            "label": "docker-build-api: debug",
            "dependsOn": [
                "build-api"
            ],
            "dockerBuild": {
                "tag": "rolspace/footballscoreboard_api:dev",
                "target": "base",
                "dockerfile": "${workspaceFolder}/src/Hosts/Api/Dockerfile",
                "context": "${workspaceFolder}",
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Hosts/Api/Football.Api.csproj"
            }
        },
        {
            "type": "docker-build",
            "label": "docker-build-api: release",
            "dependsOn": [
                "build-api"
            ],
            "dockerBuild": {
                "tag": "rolspace/footballscoreboard_api:latest",
                "dockerfile": "${workspaceFolder}/src/Hosts/Api/Dockerfile",
                "context": "${workspaceFolder}",
                "platform": {
                    "os": "linux",
                    "architecture": "amd64"
                },
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Hosts/Api/Football.Api.csproj"
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run-api: debug",
            "dependsOn": [
                "docker-build-api: debug"
            ],
            "dockerRun": {
                "containerName": "footballscoreboard_api",
                "ports": [
                    {
                        "containerPort": 443,
                        "hostPort": 5001
                    }
                ],
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development",
                    "ASPNETCORE_URLS": "https://+",
                    "ASPNETCORE_HTTPS_PORT": "5001",
                    "ASPNETCORE_Kestrel__Certificates__Default__Path": "/https/cert.pem",
                    "ASPNETCORE_Kestrel__Certificates__Default__KeyPath": "/https/key.pem",
                    "Cors__PolicyName": "WebClientCorsPolicy",
                    "Cors__AllowedOrigins": "http://localhost:5002",
                    "Cors__AllowedMethods": "GET"
                },
                "volumes": [
                    {
                        "localPath": "${workspaceFolder}/src/Hosts/Api/cert.pem",
                        "containerPath": "/https/cert.pem",
                        "permissions": "ro"
                    },
                    {
                        "localPath": "${workspaceFolder}/src/Hosts/Api/key.pem",
                        "containerPath": "/https/key.pem",
                        "permissions": "ro"
                    }
                ],
                "envFiles": [
                    "${workspaceFolder}/development.env"
                ],
                "network": "footballscoreboard_db_project_dbnet"
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Hosts/Api/Football.Api.csproj",
                "enableDebugging": true
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run-api: release",
            "dependsOn": [
                "docker-build-api: release"
            ],
            "dockerRun": {
                "containerName": "footballscoreboard_api",
                "ports": [
                    {
                        "containerPort": 80,
                        "hostPort": 5001
                    }
                ],
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Production",
                    "Cors__PolicyName": "WebClientCorsPolicy",
                    "Cors__AllowedOrigins": "http://localhost:5002",
                    "Cors__AllowedMethods": "GET"
                },
                "envFiles": [
                    "${workspaceFolder}/src/production.env"
                ],
                "network": "footballscoreboard_db_project_dbnet"
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Hosts/Api/Football.Api.csproj"
            }
        },
        {
            "label": "build-worker",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Hosts/Worker/Football.Worker.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish-worker",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/Hosts/AWorkerpi/Football.Worker.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch-worker",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/Hosts/Worker/Football.Worker.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "type": "docker-build",
            "label": "docker-build-worker: debug",
            "dependsOn": [
                "build-worker"
            ],
            "dockerBuild": {
                "tag": "rolspace/footballscoreboard_worker:dev",
                "target": "base",
                "dockerfile": "${workspaceFolder}/src/Hosts/Worker/Dockerfile",
                "context": "${workspaceFolder}",
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Hosts/Worker/Football.Worker.csproj"
            }
        },
        {
            "type": "docker-build",
            "label": "docker-build-worker: release",
            "dependsOn": [
                "build-worker"
            ],
            "dockerBuild": {
                "tag": "rolspace/footballscoreboard_worker:latest",
                "dockerfile": "${workspaceFolder}/src/Hosts/Worker/Dockerfile",
                "context": "${workspaceFolder}",
                "platform": {
                    "os": "linux",
                    "architecture": "amd64"
                },
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Hosts/Worker/Football.Worker.csproj"
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run-worker: debug",
            "dependsOn": [
                "docker-build-worker: debug"
            ],
            "dockerRun": {
                "containerName": "footballscoreboard_worker",
                "ports": [
                    {
                        "containerPort": 80,
                        "hostPort": 5003
                    }
                ],
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development",
                    "ASPNETCORE_URLS": "https://+",
                    "ASPNETCORE_HTTPS_PORT": "5003",
                    "ASPNETCORE_Kestrel__Certificates__Default__Path": "/https/cert.pem",
                    "ASPNETCORE_Kestrel__Certificates__Default__KeyPath": "/https/key.pem",
                    "Hub__HubUrl": "https://footballscoreboard_api/hub/v1/plays"
                },
                "volumes": [
                    {
                        "localPath": "${workspaceFolder}/src/Hosts/Worker/cert.pem",
                        "containerPath": "/https/cert.pem",
                        "permissions": "ro"
                    },
                    {
                        "localPath": "${workspaceFolder}/src/Hosts/Worker/key.pem",
                        "containerPath": "/https/key.pem",
                        "permissions": "ro"
                    }
                ],
                "envFiles": [
                    "${workspaceFolder}/development.env"
                ],
                "network": "footballscoreboard_db_project_dbnet"
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Hosts/Worker/Football.Worker.csproj",
                "enableDebugging": true
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run-worker: release",
            "dependsOn": [
                "docker-build-worker: release"
            ],
            "dockerRun": {
                "containerName": "footballscoreboard_worker",
                "ports": [
                    {
                        "containerPort": 80,
                        "hostPort": 5003
                    }
                ],
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Production",
                    "Hub__HubUrl": "http://footballscoreboard_api/hub/v1/plays"
                },
                "envFiles": [
                    "${workspaceFolder}/src/production.env"
                ],
                "network": "footballscoreboard_db_project_dbnet"
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Hosts/Worker/Football.Worker.csproj"
            }
        },
        {
            "label": "build-blazor",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Hosts/Blazor/Football.Blazor.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish-blazor",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/Hosts/Blazor/Football.Blazor.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch-blazor",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/Hosts/Blazor/Football.Blazor.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "type": "docker-build",
            "label": "docker-build-blazor: debug",
            "dependsOn": [
                "build-blazor"
            ],
            "dockerBuild": {
                "tag": "rolspace/footballscoreboard_blazor:dev",
                "dockerfile": "${workspaceFolder}/src/Hosts/Blazor/Dockerfile",
                "context": "${workspaceFolder}",
                "pull": true,
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Hosts/Blazor/Football.Blazor.csproj"
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run-blazor: debug",
            "dependsOn": [
                "docker-build-blazor: debug"
            ],
            "dockerRun": {
                "containerName": "footballscoreboard_blazor",
                "ports": [
                    {
                        "containerPort": 8080,
                        "hostPort": 5002
                    }
                ]
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Hosts/Blazor/Football.Blazor.csproj",
                "enableDebugging": false
            }
        },
        {
            "type":"shell",
            "label": "docker-stop-blazor: debug",
            "command": "docker container stop footballscoreboard_blazor && docker container rm footballscoreboard_blazor"
        }
    ]
}
