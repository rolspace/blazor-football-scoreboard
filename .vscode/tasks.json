{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-api",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Hosts/Api/Football.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish-api",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/Hosts/Api/Football.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch-api",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/Hosts/Api/Football.Api.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "type": "docker-build",
            "label": "docker-build-api: debug",
            "dependsOn": [
                "build-api"
            ],
            "dockerBuild": {
                "tag": "rolspace/footballscoreboard_api:dev",
                "target": "base",
                "dockerfile": "${workspaceFolder}/src/Hosts/Api/Dockerfile",
                "context": "${workspaceFolder}",
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Hosts/Api/Football.Api.csproj"
            }
        },
        {
            "type": "docker-build",
            "label": "docker-build-api: release",
            "dependsOn": [
                "build-api"
            ],
            "dockerBuild": {
                "tag": "rolspace/footballscoreboard_api:latest",
                "dockerfile": "${workspaceFolder}/src/Hosts/Api/Dockerfile",
                "context": "${workspaceFolder}",
                "platform": {
                    "os": "linux",
                    "architecture": "amd64"
                },
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Hosts/Api/Football.Api.csproj"
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run-api: debug",
            "dependsOn": [
                "docker-build-api: debug"
            ],
            "dockerRun": {
                "containerName": "footballscoreboard_api",
                "ports": [
                    {
                        "containerPort": 443,
                        "hostPort": 5001
                    }
                ],
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development",
                    "ASPNETCORE_URLS": "https://+",
                    "ASPNETCORE_HTTPS_PORT": "5001",
                    "ASPNETCORE_Kestrel__Certificates__Default__Path": "/https/Api_Cert.pem",
                    "ASPNETCORE_Kestrel__Certificates__Default__KeyPath": "/https/Api_CertKey.pem",
                    "Cors__PolicyName": "WebClientCorsPolicy",
                    "Cors__AllowedOrigins": "https://localhost:5002",
                    "Cors__AllowedMethods": "GET",
                    "Scoreboard__Week": "1"
                },
                "volumes": [
                    {
                        "localPath": "${workspaceFolder}/.docker/volumes/certs/api",
                        "containerPath": "/https",
                        "permissions": "ro"
                    }
                ],
                "envFiles": [
                    "${workspaceFolder}/.env.api"
                ],
                "network": "footballscoreboard_localdb_compose_db_net"
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Hosts/Api/Football.Api.csproj",
                "enableDebugging": true
            }
        },
        {
            "label": "build-blazor",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Hosts/Blazor/Football.Blazor.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish-blazor",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/Hosts/Blazor/Football.Blazor.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch-blazor",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/Hosts/Blazor/Football.Blazor.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-worker",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Hosts/Worker/Football.Worker.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish-worker",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/Hosts/AWorkerpi/Football.Worker.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch-worker",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/Hosts/Worker/Football.Worker.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "type": "docker-build",
            "label": "docker-build-worker: debug",
            "dependsOn": [
                "build-worker"
            ],
            "dockerBuild": {
                "tag": "rolspace/footballscoreboard_worker:dev",
                "target": "base",
                "dockerfile": "${workspaceFolder}/src/Hosts/Worker/Dockerfile",
                "context": "${workspaceFolder}",
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Hosts/Worker/Football.Worker.csproj"
            }
        },
        {
            "type": "docker-build",
            "label": "docker-build-worker: release",
            "dependsOn": [
                "build-worker"
            ],
            "dockerBuild": {
                "tag": "rolspace/footballscoreboard_worker:latest",
                "dockerfile": "${workspaceFolder}/src/Hosts/Worker/Dockerfile",
                "context": "${workspaceFolder}",
                "platform": {
                    "os": "linux",
                    "architecture": "amd64"
                },
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Hosts/Worker/Football.Worker.csproj"
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run-worker: debug",
            "dependsOn": [
                "docker-build-worker: debug"
            ],
            "dockerRun": {
                "containerName": "footballscoreboard_worker",
                "ports": [
                    {
                        "containerPort": 443,
                        "hostPort": 5003
                    }
                ],
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development",
                    "ASPNETCORE_URLS": "https://+",
                    "ASPNETCORE_HTTPS_PORT": "5003",
                    "ASPNETCORE_Kestrel__Certificates__Default__Path": "/https/Football.Worker.pfx",
                    "Hub__HubUrl": "https://footballscoreboard_api/hub/plays",
                    "Scoreboard__Week": "1"
                },
                "envFiles": [
                    "${workspaceFolder}/.env.worker"
                ],
                "volumes": [
                    {
                        "localPath": "${userHome}/.aspnet/https/Football.Worker.pfx",
                        "containerPath": "/https/Football.Worker.pfx",
                        "permissions": "ro"
                    }
                ],
                "network": "footballscoreboard_localdb_compose_db_net"
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Hosts/Worker/Football.Worker.csproj",
                "enableDebugging": true
            }
        },
        {
            "label": "run-sql-script-in-mysql-container-bash",
            "type": "shell",
            "command": "docker exec -i footballscoreboard_localdb /bin/sh -c 'MYSQL_PWD=\"${input:mysqlPassword}\" mysql -ufootballscoreboard_dbuser footballscoreboard_db' < ${workspaceFolder}/scripts/clean_db.sql",
            "problemMatcher": [],
            "detail": "Bash: Runs the clean_db.sql script inside the footballscoreboard_localdb MySQL container. Prompts for MySQL password using an input variable."
        },
        {
            "label": "run-sql-script-in-mysql-container-windows",
            "type": "shell",
            "command": "Get-Content",
            "args": [
                "${workspaceFolder}\\scripts\\clean_db.sql",
                "|",
                "docker",
                "exec",
                "-i",
                "footballscoreboard_localdb",
                "/bin/sh",
                "-c",
                "MYSQL_PWD=\"${input:mysqlPassword}\" mysql -ufootballscoreboard_dbuser footballscoreboard_db"
            ],
            "options": {
                "shell": {
                    "executable": "powershell.exe",
                    "args": [
                        "-Command"
                    ]
                }
            },
            "problemMatcher": [],
            "detail": "Windows: Runs the clean_db.sql script inside the footballscoreboard_localdb MySQL container. Prompts for MySQL password using an input variable."
        },
        {
            "label": "collect-test-coverage",
            "command": "dotnet",
            "type": "process",
            "args": [
                "dotnet-coverage",
                "collect",
                "dotnet test --no-restore",
                "-f",
                "cobertura",
                "-o",
                "coverage.xml"
            ],
            "problemMatcher": [],
            "detail": "Collects test coverage in cobertura format"
        },
        {
            "label": "generate-coverage-report",
            "command": "dotnet",
            "type": "process",
            "args": [
                "reportgenerator",
                "-reports:coverage.xml",
                "-reporttypes:Html",
                "-targetdir:coverage",
                "-assemblyfilters:+Football.*;-Football.*Tests"
            ],
            "problemMatcher": [],
            "detail": "Generates HTML coverage report from coverage.xml"
        },
        {
            "label": "test-with-coverage",
            "dependsOrder": "sequence",
            "dependsOn": [
                "collect-test-coverage",
                "generate-coverage-report"
            ],
            "problemMatcher": [],
            "detail": "Runs tests with coverage collection and generates HTML report"
        }
    ],
    "inputs": [
        {
            "id": "mysqlPassword",
            "type": "promptString",
            "description": "Enter the MySQL root password",
            "password": true
        }
    ]
}
